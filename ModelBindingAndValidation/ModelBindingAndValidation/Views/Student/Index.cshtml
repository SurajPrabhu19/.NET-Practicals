@model StudentModel;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form method="post" asp-controller="Student" asp-action="Index">
                <input class="form-control" placeholder="Enter your name" asp-for="name"/>
                <br />
                <input type="submit" class="btn btn-outline-primary"/>
            </form>
        </div>

    </div>

</div>





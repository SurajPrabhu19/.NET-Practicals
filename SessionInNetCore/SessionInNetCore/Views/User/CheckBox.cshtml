@model CheckBoxModel
@{
    ViewData["Title"] = "CheckBox";
}

<h1>CheckBox</h1>

@{
    if (ViewData["data"] != null)
    {
        <p>@ViewData["data"]</p>
    }
}
<form asp-action="CheckBox" asp-controller="User" method="post">

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsChecked">
        <label class="form-check-label" for="flexCheckDefault">
            @Model.Text
        </label>
    </div>
    <br />
    <input type="submit" value="Submit" class="btn btn-success" />
</form>


